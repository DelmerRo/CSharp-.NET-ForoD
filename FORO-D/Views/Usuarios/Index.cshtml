@model IEnumerable<FORO_D.Models.Usuario>

@{
    ViewData["Title"] = "Lista De Administradores";
}
<div class="card col-md-12 p-3">
    <div class="card">
        <h3 class="btn-primary text-center text-white">@ViewData["Title"]</h3>

        <div class="my-1">
            <a class="btn btn-success" asp-controller="Account" asp-action="CrearAdministrador">
                <i class="fas fa-plus"></i> Crear nuevo Administrador
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var admin in Model)
                    {
                        <tr>
                            <td>@admin.UserName</td>
                            <td>@admin.Nombre</td>
                            <td>@admin.Apellido</td>
                            <td>@admin.Email</td>
                            <td>
                                @if (User.IsInRole("Usuario") && Int32.Parse(User.Claims.First().Value) != admin.Id)
                                {
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@admin.Id">
                                        <i class="fas fa-info-circle"></i> Detalles
                                    </a>
                                }
                                @if (User.IsInRole("Usuario") && Int32.Parse(User.Claims.First().Value) != admin.Id)
                                {
                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@admin.Id">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                }
                                @if (User.IsInRole("Usuario") && Int32.Parse(User.Claims.First().Value) != admin.Id)
                                {
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@admin.Id">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
