@model FORO_D.Models.Usuario

@{
    ViewData["Title"] = "Detalles";
}
<div class="card col-md-12 p-3">
    <div class="card">
        <h1 class="btn-primary text-center text-white">@ViewData["Title"]</h1>

        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Detalles del Usuario</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">Usuario:</dt>
                    <dd class="col-sm-9">@Model.UserName</dd>

                    <dt class="col-sm-3">Nombre:</dt>
                    <dd class="col-sm-9">@Model.Nombre</dd>

                    <dt class="col-sm-3">Apellido:</dt>
                    <dd class="col-sm-9">@Model.Apellido</dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Fecha de Alta:</dt>
                    <dd class="col-sm-9">@Model.FechaAlta.ToString()</dd>
                </dl>

                <div class="mt-4">
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="fas fa-arrow-left"></i> Regresar a la Lista
                    </a>
                    
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
