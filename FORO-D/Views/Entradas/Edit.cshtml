@model FORO_D.Models.Entrada

@{
    ViewData["Title"] = "Editar Entrada";
}

<div class="container">
    <div class="card shadow">
        <div class="card-body">
            <h1 class="text-center mb-4">Editar Entrada</h1>
            <hr />

            <form asp-action="Edit" asp-route-entradaId="@Model.EntradaId" class="mb-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EntradaId" />

                <div class="mb-3">
                    <label for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                @if (!Model.Preguntas.Any())
                {
                    <div class="mb-3">
                        <label for="CategoriaId" class="form-label">Categoría</label>
                        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias"></select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                }

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Privada" id="Privada" />
                    <label class="form-check-label" for="Privada">¿Privada?</label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i> Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
