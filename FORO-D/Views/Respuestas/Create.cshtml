@model FORO_D.Models.Respuesta

@{
    ViewData["Title"] = "Crear Respuesta";
    Pregunta pregunta = ViewBag.Pregunta;
}

<div class="card">
    <div class="container p-3">
        <!-- Detalles de la Pregunta -->
        <div class="card mb-4 shadow">
            <div class="card-body">
                <h2 class="card-title">@pregunta.Descripcion</h2>
            </div>
        </div>

        <!-- Formulario para crear una respuesta -->
        <div class="card shadow">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Responder a la Pregunta</h3>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="PreguntaId" class="form-control" hidden readonly />

                    <div class="form-group">
                        <label for="Descripcion" class="form-label">Respuesta</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="6" placeholder="Escribe tu respuesta aquí..." required></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle me-2"></i> Publicar Respuesta</button>
                        <a asp-controller="Preguntas" asp-action="Details" asp-route-id="@Model.PreguntaId" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i> Volver a la Pregunta</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
